<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="io.github.luiseduardobrito.angelhack.activity.ChooseCompanyActivity_&quot;s" >

    <LinearLayout
        android:id="@+id/empy_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/brand"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_no_companies" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="You have no companies yet"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/create_empty_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_dark_button_bg"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/action_create_company"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/company_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/companies_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:divider="@android:color/transparent" >
        </ListView>

        <Button
            android:id="@+id/create_company_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_dark_button_bg"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:text="@string/action_create_company"
            android:textColor="@color/white" />
    </LinearLayout>

</merge>