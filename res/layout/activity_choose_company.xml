<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brand"
    android:orientation="vertical"
    tools:context="io.github.luiseduardobrito.angelhack.activity.ChooseCompanyActivity_" >

    <ListView
        android:id="@+id/companies_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:divider="@android:color/transparent" >
    </ListView>

    <Button
        android:id="@+id/create_company_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_dark_button_bg"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/action_create_company"
        android:textColor="@color/white" />

</LinearLayout>