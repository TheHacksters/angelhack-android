<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invite_event_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="24dp" />

    <TextView
        android:id="@+id/event_type_label"
        style="@android:style/TextAppearance.Large.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp" />

    <ListView
        android:id="@+id/invitations_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:divider="@android:color/transparent" >
    </ListView>

    <Button
        android:id="@+id/send_invitations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_bg"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/action_invite_event"
        android:textColor="@color/white" />

</LinearLayout>