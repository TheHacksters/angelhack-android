<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:endColor="@color/dark_brand"
                android:startColor="@color/darker_brand"
                android:type="linear" >
            </gradient>

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="-1dp"
        android:right="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/dark_brand" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>